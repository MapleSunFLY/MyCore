<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/utils_toast_bg"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/toast_padding"
        android:src="@drawable/utils_toast_ic_selector" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="@dimen/toast_padding"
        android:textColor="@color/toast_text_color"
        android:textSize="@dimen/toast_text_size" />
</LinearLayout>